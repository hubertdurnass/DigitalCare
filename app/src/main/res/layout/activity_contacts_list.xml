<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/contact_list_bg">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LISTA KONTAKTÃ“W"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#E65100"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnVoice"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/voice_mode"
        android:textSize="32sp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:drawableTop="@android:drawable/ic_btn_speak_now"
        android:drawablePadding="8dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TWOJE KONTAKTY (I SOS)"
        android:textSize="24sp"
        android:textColor="#BF360C"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <ListView
        android:id="@+id/lvContacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="32sp"
        android:divider="#FFCC80"
        android:dividerHeight="4dp"
        android:background="#FFFFFF"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="@string/add_contact"
            android:textSize="20sp"
            android:backgroundTint="#FFB300"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="@string/back"
            android:textSize="20sp"
            android:backgroundTint="#E64A19"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:textAllCaps="true" />
    </LinearLayout>

</LinearLayout>