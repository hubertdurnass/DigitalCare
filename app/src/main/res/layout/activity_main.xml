<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:gravity="center"
    android:background="@drawable/main_gradient_bg">

    <Button
        android:id="@+id/btnSOS"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="SOS"
        android:textSize="80sp"
        android:textStyle="bold"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF"
        android:drawableTop="@android:drawable/ic_dialog_alert"
        android:paddingTop="20dp"
        android:layout_marginBottom="40dp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text="@string/btn_call"
        android:textSize="55sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:backgroundTintMode="src_in"
        android:textColor="#FFFFFF"
        android:drawableTop="@android:drawable/ic_menu_call"
        android:drawablePadding="8dp"
        android:layout_marginBottom="32dp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnSMS"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text="@string/btn_sms"
        android:textSize="55sp"
        android:textStyle="bold"
        android:backgroundTint="#2196F3"
        android:backgroundTintMode="src_in"
        android:textColor="#FFFFFF"
        android:drawableTop="@android:drawable/ic_dialog_email"
        android:drawablePadding="8dp"
        android:layout_marginBottom="32dp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="USTAWIENIA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:backgroundTint="#757575"
        android:backgroundTintMode="src_in"
        android:textColor="#FFFFFF"
        android:drawableTop="@android:drawable/ic_menu_manage"
        android:drawablePadding="6dp"
        android:textAllCaps="true" />

</LinearLayout>